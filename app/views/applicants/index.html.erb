<p id="notice"><%= notice %></p>

<h1>Applicants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cohort</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Bio</th>
      <th>Linkedin</th>
      <th>Github</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applicants.each do |applicant| %>
      <tr>
        <td><%= applicant.name %></td>
        <td><%= applicant.cohort %></td>
        <td><%= applicant.email %></td>
        <td><%= applicant.phone %></td>
        <td><%= applicant.bio %></td>
        <td><%= applicant.linkedin %></td>
        <td><%= applicant.github %></td>
        <td><%= link_to 'Show', applicant %></td>
        <td><%= link_to 'Edit', edit_applicant_path(applicant) %></td>
        <td><%= link_to 'Destroy', applicant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Applicant', new_applicant_path %>
<%= link_to 'Logout', logout_url %>
